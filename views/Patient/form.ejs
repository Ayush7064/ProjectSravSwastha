  <div class="form-container">
    <h1>OPD Registration</h1>

    <div class="registration-box">

      <div class="headers">
        <div class="first"><a href="/appointmentnew">New Appointment</a></div>
        <div class="second"><a href="/appointmentstatus">Appointment Status</a></div>
      </div>

      <div class="separator">
        <div class="part-one"></div>
        <div class="part-two"></div>
      </div>

      <div class="tabs">
        <div class="tab active"><div class="circle">1</div> Select Hospital</div>
        <div class="tab"><div class="circle">2</div> Personal Details</div>
        <div class="tab"><div class="circle">3</div> Payment</div>
        <div class="search-button"><input type="text" placeholder="Search"
          name="search"></div>
      </div>

      <div class="herosection">
        <div class="lower-forms-container">

          <form class="appointment-form" id="appointmentForm" action="/homepage" method="post">
              <!-- Initial Form Fields -->
            <div id="initialFields">
              <label for="hospital">Hospital</label>
              <select id="hospital" name="hospital">
                <option value="" disabled selected>Select Hospital</option>
                <option value="Apollo hospital">Apollo hospital</option>
                <!-- Add more options here -->
              </select>

              <label for="department">Department</label>
              <select id="doctor" name="doctor">
                <option value="" disabled selected>Select Doctor</option>
                <option value="Dr. Ayesha Verma">Dr. Ayesha Verma</option>
                <!-- Add more options here -->
              </select>

              <label for="doctor">Doctor</label>
              <select id="doctor" name="doctor">
                <option value="" disabled selected>Select Doctor</option>
                <option value="Dr. Ayesha Verma">Dr. Ayesha Verma</option>
                <!-- Add more options here -->
              </select>

              <label for="appointmentDate">Appointment Date</label>
              <input type="date" id="appointmentDate" name="appointmentDate" required>

              <!-- Proceed to Pay Button -->
              <button type="button" id="proceedToPay">Next</button>
          </div>

          <!-- New Fields for Patient Details (Initially Hidden) -->
          <div id="patientFields" style="display: none;">
              <label for="patientName">Patient Name</label>
              <input type="text" id="patientName" name="patientName" placeholder="Enter Patient Name" required>

              <label for="email">Email ID</label>
              <input type="email" id="email" name="email" placeholder="Enter Email ID" required>

              <label for="mobile">Mobile</label>
              <input type="tel" id="mobile" name="mobile" placeholder="Enter Mobile Number" required>

              <label for="age">Age</label>
              <input type="number" id="age" name="age" placeholder="Enter Age" required>

              <label for="gender">Gender</label>
              <select id="gender" name="gender" required>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
                  <option value="other">Other</option>
              </select>

              <!-- Final Proceed to Pay Button -->
              <a href="/paymentSuccessful"><p id="finalProceedToPay">Proceed to Pay</button>
              </p>
              </a>
          </div>
          </form>

        </div>


        <div class="recommendation">
          <h2>Recommended:</h2>
          <div class="recommendation-card">
